{{#partial "content"}}
    <div>
        <h3>Contact</h3>
        {{#if contactResult.success}}
            <div class="panel panel-default">
                <div class="panel-body bg-success">
                    Your message has been sent successfully.
                </div>
            </div>
        {{else}}
            {{#if contactResult.hasErrors}}
                <div class="panel panel-default">
                    <div class="panel-body bg-danger">
                        <ul>
                            {{#each contactResult.errors}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            {{/if}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <form action="/contact" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input id="name" name="name" type="text" class="form-control" placeholder="Name"/>
                        </div>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input id="email" name="email" type="email" class="form-control" placeholder="Email"/>
                        </div>
                        <div class="form-group">
                            <label for="telephone">Telephone Number</label>
                            <input id="telephone" name="telephone" type="tel" class="form-control" placeholder="Telephone"/>
                        </div>
                        <div class="form-group">
                            <label for="message">Your Message</label>
                            <textarea id="message" name="message" class="form-control" placeholder="Your Message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        {{/if}}
    </div>
{{/partial}}
{{> base}}